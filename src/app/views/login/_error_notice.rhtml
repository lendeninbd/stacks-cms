<% if flash[:error] -%>
	<div class="error_block">
		<%= image_tag '16x16/error.png', :alt => 'Error', :size => '16x16', :class => 'middle' %>
		<%= flash[:error] %>
	</div>
<% end -%>

<% if flash[:notice] -%>
	<div class="notice_block">
		<%= image_tag '16x16/notice.png', :alt => 'Notice', :size => '16x16', :class => 'middle' %>
		<%= flash[:notice] %>
	</div>
<% end -%>
